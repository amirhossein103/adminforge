{
  "name": "amirhossein103/adminforge",
  "version": "1.1.1",
  "description": "WordPress-native admin framework for building settings pages, meta boxes, and custom fields. Designed exclusively for WordPress theme and plugin developers.",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/amirhossein103/adminforge",
  "keywords": [
    "wordpress",
    "wordpress-library",
    "admin-framework",
    "admin-panel",
    "meta-box",
    "settings-api",
    "custom-fields",
    "psr-4",
    "wp-admin"
  ],
  "authors": [
    {
      "name": "Amirhossein",
      "homepage": "https://github.com/amirhossein103",
      "role": "Developer"
    }
  ],
  "support": {
    "issues": "https://github.com/amirhossein103/adminforge/issues",
    "source": "https://github.com/amirhossein103/adminforge",
    "docs": "https://github.com/amirhossein103/adminforge#readme"
  },
  "require": {
    "php": ">=8.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "suggest": {
    "wordpress": "Requires WordPress 5.8 or higher. This library is designed exclusively for WordPress environments."
  },
  "autoload": {
    "psr-4": {
      "AdminForge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "AdminForge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR12 src/",
    "phpcbf": "phpcbf --standard=PSR12 src/",
    "phpstan": "phpstan analyse src/ --level=5"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform-check": false,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
