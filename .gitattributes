# Auto detect text files and perform LF normalization
* text=auto

# PHP files
*.php text eol=lf

# JavaScript
*.js text eol=lf

# CSS
*.css text eol=lf

# JSON
*.json text eol=lf

# Markdown
*.md text eol=lf

# Config files
.gitignore text eol=lf
.gitattributes text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary

# Exclude from exports
.gitattributes export-ignore
.gitignore export-ignore
/.github export-ignore
/tests export-ignore
